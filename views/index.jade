extends layout

block content
  .container.wide.landing
    .page-spin
    .block-messages
      ul
    - if (typeof embed === 'undefined' || !embed)
      header
        .saved-ghost
          form(enctype="multipart/form-data", method="POST")
            input(name="username", type="text")
            input(name="password", type="password")
            input(value="_", type="submit")
          ul
        .header
          - if (typeof user !== 'undefined')
            .header-user-box
              .header-user
                a.navigate(href="/#{user.username}")
                  img(src="https://www.gravatar.com/avatar/" + user.gravatar + "?s=34&d=mm", width="34", height="34")
                i.icon-down-dir
                ul.header-user-menu
                  li
                    a.navigate(href="/" + user.username)
                      | Profile
                      i.icon-library
                  li
                    a.navigate(href="/settings")
                      | Settings
                      i.icon-cog
                  li
                    a(href="/logout")
                      | Logout
                      i.icon-logout(style="right:9px;")
              a.button.blue-button.add-data-button(href="javascript:;")
                i.icon-upload
                | Upload Data
          - else
            a.button.signin-button(href="javascript:;") Sign in
          .header-logo
            a.navigate(href="/")
              | Timeline
              span
                | beta
          .header-search
            .header-search-inner
              input.header-search-input(type="search", tabindex="1", placeholder="Search...")
              .search-spin
              .search-display
                .list-header
          ul.header-navigation
            li
              a(href="/about", class="navigate") About
            li
              a(href="/contact", class="navigate") Contact
            li
              a(href="/privacy", class="navigate") Privacy
            li
              a(href="/terms", class="navigate") Terms of Use
    block main
          
