extends layout

block content
  .container
    .page-spin
    .block-messages
    - if (!embed)
      header
        .saved-ghost
          form(enctype="multipart/form-data", method="POST")
            input(name="username", type="text")
            input(name="password", type="password")
            input(value="_", type="submit")
          ul
        .header
          - if (typeof user !== 'undefined')
            .user-box
              a.username.header-action(href="/#{user.username}") #{user.displayName}
              a.header-action.navigate(href="/settings")
                i.icon-menu-1
              a.header-action(href="/logout")
                i.icon-logout
              a.add-data-button.button(href="javascript:;") Add Data
          - else
            a.signin-button.button(href="javascript:;") Sign in
          .header-logo
            a.navigate(href="/")
              img(src="#{root}/img/time.png", width="13", height="12")
              | Skylin
          .header-middle
            input.header-search(type="search", placeholder="Search...")
            span.header-title
    - var hc = embed ? "main embed": "main";
    div(class=hc, role="main")
    - if (!embed)
      footer
