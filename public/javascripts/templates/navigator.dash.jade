.dashboard-item
  .dashboard-item-header
    - if (shrinkable) {
      a.dashboard-link.toggler(href="javascript:;", title="shrink")
        | -
    - }
    h1.dashboard-item-header-txt
      | Navigator
  .dashboard-item-content
    - if (waiting) {
      p.dashboard-item-message
        | Waiting...
    - } else if (loading) {
      p.dashboard-item-message
        | Loading...
    - } else if (empty) {
      p.dashboard-item-message
        | You don't have any notifications in your system yet.
    - } else {
      .navigator-scale
        div.day-scale(role="button") 1 day
        div.month-scale(role="button") 1 month
        div.year-scale(role="button") 1 year
      .navigator-window
      .navigator-window-handle-left
      .navigator-window-handle-right
      .navigator
        div
    - }

