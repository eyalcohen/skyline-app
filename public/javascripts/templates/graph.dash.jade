.dashboard-item
  .dashboard-item-header
    a.dashboard-link.remove-graph(href="javascript:;", title="Export visible data as CSV.")
      | -
    a.dashboard-link.add-graph(href="javascript:;", title="Export visible data as CSV.")
      | +
    a.dashboard-link.export(href="javascript:;", title="Export visible data as CSV.")
      | Export
    - if (shrinkable) {
      a.dashboard-link.toggler(href="javascript:;", title="shrink")
        | -
    - }
    h1.dashboard-item-header-txt
      | Graph
  .dashboard-item-content
    - if (waiting) {
      p.dashboard-item-message
        | Waiting...
    - } else if (loading) {
      p.dashboard-item-message
        | Loading...
    - } else if (empty) {
      p.dashboard-item-message
        | Nothing to graph.
    - } else {
      .graph
        div
    - }

