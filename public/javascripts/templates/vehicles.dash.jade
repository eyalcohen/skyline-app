.dashboard-item
  .dashboard-item-header
    a.dashboard-link.toggler(href="javascript:;", title="shrink")
      | -
    h1.dashboard-item-header-txt
      | Vehicles
  .dashboard-item-content
    - if (loading) {
      p.dashboard-item-message
        | Loading...
    - } else if (rows.length === 0) {
      p.dashboard-item-message
        | You don't have any vehicles in your system yet.
    - } else {
      table
        thead
          tr
            th
              | Make
            th
              | Model
            th
              | Year
            th
              | Owner
            th(colspan="2")
              | Last Seen
        tbody
          - rows.forEach(function (row, i) {
          -  row = row.attributes;
            tr(id=row.htmlId, class=['dark','light'][i%2])
              td
                =row.make
                span.edit-panel
                  a.edit-link(href="javascript:;", title="Edit")
                    | Edit |
              td
                =row.model
              td
                =row.year
              td
                =row.user.email
              td(colspan="2", data-time=row.lastSeen)
                | -
              td(align="right")
                input(type="submit", title="explore", value="Explore")
          - })
    - }

