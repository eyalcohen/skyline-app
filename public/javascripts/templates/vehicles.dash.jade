.dashboard-item
  .dashboard-item-header
    - if (shrinkable) {
      a.dashboard-link.toggler(href="javascript:;", title="shrink")
        | -
    - }
    h1.dashboard-item-header-txt
      =title
  .dashboard-item-content.scrollable
    - if (loading) {
      p.dashboard-item-message
        | Loading...
    - } else if (rows.length === 0) {
      p.dashboard-item-message
        | You don't have any vehicles in your system yet.
    - } else {
      table
        thead
          tr
            th
              | Name
            th
              | Owner
            th(colspan="2")
              | Last Seen
        tbody
          - rows.forEach(function (row, i) {
          -  row = row.attributes;
            tr(id=row.htmlId, class=['dark','light'][i%2], data-title=row.year+" "+row.make+" "+row.model+(row.name?" "+row.name:""))
              td.nowrap(style="font-weight:bold;")
                =row.year + ' ' + row.make + ' ' + row.model + ' ' + row.name
                span.edit-panel
                  a.edit-link(href="javascript:;", title="Change vehicle properties")
                    | Edit | 
                  a.config-link(href="javascript:;", title="Manage vehicle data logging")
                    | Configure
              //td(style="font-weight:bold;")
              //=row.make
              //td(style="font-weight:bold;")
              //=row.model
              //td(style="font-weight:bold;")
              //=row.name
              td.nowrap(style="font-style:italic;")
                - if (row.user) {
                  =row.user.email
                - } else {
                  | n / a
                - }
              td.nowrap(colspan="2", data-time=row.lastSeen, data-cycle=JSON.stringify(row.lastCycle))
                | -
              td(align="right")
                - if (row.lastSeen !== 0) {
                  div.open-vehicle(role="button", title="See vehicle data")
                    div
                    span Open
                - } else {
                  | &nbsp;
                - }
          - })
    - }

